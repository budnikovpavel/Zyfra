@model Zyfra.DbModel.Direction

@{
    ViewBag.Title = "Добавление подразделения";
    Layout = "_Layout";
}


<hr />
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="addDirectionsLabel">Добавление подразделения</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="directionForm" asp-controller="Directions" asp-action="Create" >
                <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                <div class="form-group">
                    <input asp-for="Id" class="form-control" readonly type="hidden"/>
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name">Наименование</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="DateCreated" class="form-control" readonly type="hidden" />
                    <span asp-validation-for="DateCreated" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name">Описание</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="DateCreated" class="text-danger"></span>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
            <button type="button" class="btn btn-primary" data-save="modal" id="saveDirection">Сохранить</button>
        </div>
    </div>
</div> 